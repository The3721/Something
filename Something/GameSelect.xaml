<Page x:Class="Something.GameSelect"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Something"
      mc:Ignorable="d" MouseMove="mouseColorEffect"
      d:DesignWidth="420" d:DesignHeight="450"
      Title="GameSelect">

    <Grid x:Name="GameSelectScreen">
        <TextBlock Text="Choose a Story" Foreground="White" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="18" Width="120" Height="24"/>
        <Rectangle x:Name="rect1" Fill="Black" Margin="0,0,0,40" VerticalAlignment="Bottom" Width="330" Height="360" Panel.ZIndex="0" RadiusX="20" RadiusY="50"/>
        <StackPanel x:Name="SelectPanel" VerticalAlignment="Center" Width="250">
        </StackPanel>


        <Rectangle x:Name="centerPoint" Height="1" Width="1" Panel.ZIndex="-1"/>
    </Grid>

    <Page.Resources>
        
    </Page.Resources>
</Page>
