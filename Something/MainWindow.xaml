<Window x:Class="Something.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Something"
        mc:Ignorable="d" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen"  MouseMove="Form1_MouseMove"
        Title="Something.exe" Height="520" Width="470">
    <Grid Width="450" Height="480" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid x:Name="TheGame" Background="#FF4FB092" Visibility="Collapsed">
            <Button Click="TestClick" Content="Click to change color" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"></Button>
        </Grid>

        <Grid x:Name="OpeningScreen" Background="#000">

            <Button Content="How to Play" Cursor="Hand" BorderBrush="{x:Null}" Background="{x:Null}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0" Foreground="White"/>
            <Button Content="About" Cursor="Hand" BorderBrush="{x:Null}" Background="{x:Null}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,85,0" Foreground="White"/>
            <Button x:Name="Mainbtn" Click="TheStart" Width="110" Height="50" Content="Start" BorderBrush="{x:Null}" FontSize="20" FontFamily="Segoe Print" Background="#FFDA1C1C" Foreground="#FFC6E24A" Cursor="Hand" Margin="0" Panel.ZIndex="2">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <TextBlock Margin="0,70,0,0" Text="Something" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Ink Free"/>

            <Grid VerticalAlignment="Bottom" Height="80" Margin="0,0,0,0">
                <TextBox x:Name="SkipCode_txt" Text="" Width="110" Height="18" HorizontalAlignment="Left" Margin="135,0,0,0" BorderBrush="{x:Null}" FontSize="12"/>
                <Button Click="SkipCode_btn" Width="70" Height="18" Content="Skip" HorizontalAlignment="Right" Margin="0,0,135,0" FontSize="12" BorderBrush="{x:Null}" Padding="0" FontFamily="Arial" Cursor="Hand"/>
            </Grid>
            <Separator Height="20" Margin="0,380,0,0" VerticalAlignment="Top" Width="230"/>
            <Rectangle x:Name="centerPoint" Fill="#FFF4F4F5" Height="2" Margin="0,0,0,0" Stroke="Black" Width="2"/>
        </Grid>
    </Grid>
</Window>
